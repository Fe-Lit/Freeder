##:kivy !
<my_gui>:
    ip_prop: ip  
    port_prop: port  
    out_label: out_label
    start_btn: start_btn

    GridLayout:
        cols:1
        #size: root.width - 200, root.height -200
        #pos: 100, 100
        size: root.width, root.height #grid größe=fenstergröße
        

        GridLayout:
            cols:2
            #row_force_default: True
            #row_default_height: 100

            Label:
                text: "IP: "
                size_hint_x: 0.5

            TextInput:
                multinline:False
                id: ip
                text: "192.168.2.255"
                #size_hint: 0.3, 0.3

            Label:
                text: "Port: "
                size_hint_x: 0.5
                

            TextInput:
                multiline:False
                id: port
                text: "7002"
                #size_hint: 0.3, 0.3

        Button:
            text:"Start"
            on_press: root.btn()
            id: start_btn
            size_hint_y: 0.5

        Label:
            text:"Please insert IP+Port and Press start"
            id: out_label
            font_name: "Courier New.ttf"
            size_hint_y: 3 # 2x so viel wie mit :1

